---
const posts = Object.values(
  import.meta.glob("@/pages/posts/*.md", { eager: true })
);
---

<p class="text-2xl font-bold mb-2">上課內容列表</p>
<ul>
  {
    posts.map((post: any) => (
      <li class="text-lg mb-1 text-green-500 hover:text-green-600 transition-colors ">
        <a href={post.url}>{post.frontmatter.title}</a>
      </li>
    ))
  }
</ul>
